<h1>Add New Article</h1>

<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %><br />

	</p>

	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %><br />

	</p>

	<p>
		<%= f.collection_select(:category_id, Category.all, :id, :name, include_blank: "Select Category") %><br />
	</p>

	<p>
		<%= f.collection_select(:author_id, Author.all, :id, :name, include_blank: "Select Author") %><br />
	</p>

	<p>
		<%= f.submit "Add Article" %><br />
	</p>
<% end %>
